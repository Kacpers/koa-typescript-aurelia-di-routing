{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./app"
  },
  "compileOnSave": false,
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "*/**/router.ts",
    "*/**/*.d.ts"
  ]
}